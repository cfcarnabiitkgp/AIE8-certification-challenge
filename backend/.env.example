# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Qdrant Vector Database
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=research_guidelines

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# LLM Configuration
LLM_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0.1
EMBEDDING_MODEL=text-embedding-3-small

# Agent-specific LLM Models
# Clarity Agent: Fast model for pattern matching (vague language, complex sentences)
CLARITY_AGENT_MODEL=gpt-4o-mini
# Rigor Agent: Powerful model for reasoning about methodology and experimental design
RIGOR_AGENT_MODEL=gpt-4o
# Orchestrator: Quality gate for cross-validation and prioritization
ORCHESTRATOR_MODEL=gpt-4o
