# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Cohere Configuration
COHERE_API_KEY=your_cohere_api_key_here

# Tavily Configuration (optional - for Rigor Agent best practices search)
# Leave empty to disable Tavily search (Rigor Agent will use LLM knowledge only)
TAVILY_API_KEY=
RIGOR_AGENT_ENABLE_TAVILY=true
TAVILY_SEARCH_DEPTH=basic
TAVILY_MAX_RESULTS=5
TAVILY_MAX_CALLS_PER_SECTION=2

# LangSmith Configuration (optional - for evaluation tracing)
# Sign up at https://smith.langchain.com/ for free API key
# Get key from: https://smith.langchain.com/settings
LANGCHAIN_API_KEY=lsv2_pt_your_key_here
LANGCHAIN_TRACING_V2=true
LANGCHAIN_PROJECT=rigor-clarity-eval

# Qdrant Vector Database
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=research_guidelines

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# LLM Configuration
LLM_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0.1
EMBEDDING_MODEL=text-embedding-3-small

# Agent-specific LLM Models
# Clarity Agent: Fast model for pattern matching (vague language, complex sentences)
CLARITY_AGENT_MODEL=gpt-4o-mini
# Rigor Agent: Powerful model for reasoning about methodology and experimental design
RIGOR_AGENT_MODEL=gpt-4o
# Orchestrator: Quality gate for cross-validation and prioritization
ORCHESTRATOR_MODEL=gpt-4o
